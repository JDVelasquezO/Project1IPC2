
@{
    ViewBag.Title = "CreateShielf";
    Layout = "~/Views/Layouts/_LayoutOperative.cshtml";

    var listHalls = ViewBag.ListHalls;
}

<div class="container">
    <nav>
        <div class="nav-wrapper blue">
            <div class="col s12">
                &nbsp;&nbsp;
                <a href="/Index/HomeOperative" class="breadcrumb">Home</a>
                <a href="/Inventory/Index" class="breadcrumb">Inventario</a>
                <a href="#" class="breadcrumb">Bodegas</a>
                <a href="#" class="breadcrumb">Pasillos</a>
                <a href="#" class="breadcrumb">Estantes</a>
            </div>
        </div>
    </nav>

    <div class="card">
        <div class="card-content">
            <div class="row">
                <div class="col s12">
                    <span class="card-title">Crear Estantes</span>
                    <div class="row">
                        <br />
                        @using (Html.BeginForm("InsertShielf", "Shielf", FormMethod.Post))
                        {
                            <div>
                                <div class="row">
                                    <div class="input-field col s6">
                                        <input autofocus name="letter_shielf" type="text" class="validate">
                                        <label for="first_name">Letra de Pasillo</label>
                                    </div>

                                    <div class="input-field col s6">
                                        <input name="heigth_shielf" type="text" class="validate">
                                        <label for="first_name">Altura</label>
                                    </div>

                                    <div class="input-field col s6">
                                        <select name="cbxIdShelf">
                                            <option value="" disabled selected>Escoger Pasillos</option>
                                            @foreach (var item in listHalls)
                                            {
                                                <option value="@item.id_hall">Pasillo @item.dimensions</option>
                                            }
                                        </select>
                                        <label>Pasillos</label>
                                    </div>

                                    <div class="col s4">
                                        <button class="btn waves-effect waves-light" type="submit" name="action">
                                            Registrar
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('select');
    var instances = M.FormSelect.init(elems);
    });
</script>
