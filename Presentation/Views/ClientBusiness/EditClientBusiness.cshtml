@model Entity.ClientBusiness_Entity

@{
    ViewBag.Title = "EditClientBusiness";
    Layout = "~/Views/Layouts/_LayoutAdminSystem.cshtml";

    var listTypeBusiness = ViewBag.ListTypeBusiness; // Llamamos al ViewBag de la lista
    var listSizeBusiness = ViewBag.ListSizeBusiness; // Llamamos al ViewBag de la lista
    var listTypeCard = ViewBag.ListTypeCard; // Llamamos al ViewBag de la lista
}

<nav>
    <div class="nav-wrapper blue">
        <div class="col s12">
            &nbsp;&nbsp;
            <a href="/Index/Home" class="breadcrumb">Home</a>
            <a href="#" class="breadcrumb">Clientes</a>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Cliente @Model.name_client_business</span>
                <table class="responsive-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Cantidad de Empleados</th>
                            <th>Tipo de Empresa</th>
                            <th>Tamaño de Empresa</th>
                            <th>Tarjeta de Crédito</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Model.id_client_business</td>
                            <td>
                                <div class="input-field col s12">
                                    <input placeholder="Placeholder" value="@Model.name_client_business" id="first_name" type="text" class="validate">
                                    <label for="first_name">Nombre</label>
                                </div>
                            </td>

                            <td>
                                <div class="input-field col s12">
                                    <input placeholder="Placeholder" value="@Model.quantity_employees" id="first_name" type="number" class="validate">
                                    <label for="first_name">No. Empleados</label>
                                </div>
                            </td>

                            <td>
                                <div class="input-field col s12">
                                    <input readonly placeholder="Placeholder" value="@Model.typeBusiness_Entity.type_business" id="first_name" type="text" class="validate">
                                    <label for="first_name">Tipo de Empresa</label>
                                </div>
                            </td>

                            <td>
                                <div class="input-field col s12">
                                    <input readonly placeholder="Placeholder" value="@Model.sizeBusiness_Entity.name_size" id="first_name" type="text" class="validate">
                                    <label for="first_name">Tamaño de Empresa</label>
                                </div>
                            </td>

                            <td>
                                <div class="input-field col s12">
                                    <input readonly placeholder="Placeholder" value="@Model.typeCard_Entity.type_card" id="first_name" type="text" class="validate">
                                    <label for="first_name">Tarjeta de Crédito</label>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-action">
                <div class="row">
                    <div class="col s4">
                        <select name="cbxTypeBusiness">
                            <option selected value="" disabled>Cambiar Tipo Empresa</option>
                            @foreach (var item in listTypeBusiness)
                            {
                                <option value="@item.id_type_business">@item.type_business</option>
                            }
                        </select>
                    </div>

                    <div class="col s4">
                        <select name="cbxTypeBusiness">
                            <option selected value="" disabled>Cambiar Tamaño Empresa</option>
                            @foreach (var item in listSizeBusiness)
                            {
                                <option value="@item.id_size_business">@item.size</option>
                            }
                        </select>
                    </div>

                    <div class="col s4">
                        <select name="cbxTypeBusiness">
                            <option selected value="" disabled>Cambiar Tipo Tarjeta</option>
                            @foreach (var item in listTypeCard)
                            {
                                <option value="@item.id_type_card">@item.type_card</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="buttons">
                    <button class="btn waves-effect blue" type="submit" name="action">
                        Actualizar
                        <i class="material-icons right">autorenew</i>
                    </button>

                    <button class="btn waves-effect red" type="submit" name="action">
                        @Html.ActionLink("Eliminar", "DeleteClientBusiness",
                       new { idClientBusiness = @Model.id_client_business })
                        <i class="material-icons right">delete_forever</i>
                    </button>

                    <button class="btn waves-effect cyan" type="submit" name="action">
                        @Html.ActionLink("Contactos", "InfoContact",
                        new { idClientBusiness = @Model.id_client_business })
                        <i class="material-icons right">account_circle</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<br /><br />