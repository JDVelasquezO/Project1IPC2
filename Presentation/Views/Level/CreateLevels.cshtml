
@{
    ViewBag.Title = "CreateLevels";
    Layout = "~/Views/Layouts/_LayoutOperative.cshtml";

    var listShelfs = ViewBag.ListShelfs;
}

<div class="container">
    <nav>
        <div class="nav-wrapper blue">
            <div class="col s12">
                &nbsp;&nbsp;
                <a href="/Index/HomeOperative" class="breadcrumb">Home</a>
                <a href="/Inventory/Index" class="breadcrumb">Inventario</a>
                <a href="#" class="breadcrumb">Bodegas</a>
                <a href="#" class="breadcrumb">Pasillos</a>
                <a href="#" class="breadcrumb">Estantes</a>
                <a href="#" class="breadcrumb">Niveles</a>
            </div>
        </div>
    </nav>

    <div class="card">
        <div class="card-content">
            <div class="row">
                <div class="col s12">
                    <span class="card-title">Crear Niveles</span>
                    <div class="row">
                        <br />
                        @using (Html.BeginForm("InsertLevel", "Level", FormMethod.Post))
                        {
                            <div>
                                <div class="row">
                                    <div class="input-field col s6">
                                        <select name="cbxIdShelf">
                                            <option value="" disabled selected>Escoger Estante</option>
                                            @foreach (var item in listShelfs)
                                            {
                                                <option value="@item.id_sheld">@item.letter</option>
                                            }
                                        </select>
                                        <label>Estantes</label>
                                    </div>
                                    <div class="col s6">
                                        <button class="btn waves-effect waves-light" type="submit" name="action">
                                            Registrar
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('select');
    var instances = M.FormSelect.init(elems);
    });
</script>
