@model List<Entity.ClientBusiness_Entity>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Layouts/_LayoutAdminSystem.cshtml";
}

<nav>
    <div class="nav-wrapper blue">
        <div class="col s12">
            &nbsp;&nbsp;
            <a href="/Index/Home" class="breadcrumb">Home</a>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title">Administrador de Sistema</span>

                <div class="row">
                    <div class="col s12">
                        <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
                            <li class="tab col s3"><a class="active cyan-text" href="#test1">Clientes (PYMES)</a></li>
                            <li class="tab col s3"><a class="cyan-text" href="#test2">Módulos</a></li>
                        </ul>
                    </div>
                    <div id="test1" class="col s12">
                        <div class="row">
                            <div class="col s12 m6">
                                <div class="card">

                                    @{
                                        Html.RenderAction("ListClientBusiness", "ClientBusiness");
                                    }

                                    <div class="card-action">
                                        <a href="#">This is a link</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col s12 m6">
                                <div class="card">
                                    <div class="card-content black-text">
                                        <h4>Agregar nuevo cliente</h4>
                                        <a href="/ClientBusiness/AddClientBusiness" class="btn-floating btn-large waves-effect waves-light red">
                                            <i class="material-icons">add</i>
                                        </a>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-content black-text">
                                        <h4>Suscripciones Hechas</h4>
                                        <a href="/Subscription/ListSubscriptions" class="btn-floating btn-large waves-effect waves-light red">
                                            <i class="material-icons">subscriptions</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="test2" class="col s12">
                        <div class="row">
                            <div class="col s12 m6">
                                <div class="card">

                                    @{
                                        Html.RenderAction("ListModule", "Module");
                                    }

                                    <div class="card-action">
                                        <a href="#">This is a link</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col s12 m6">
                                <div class="card">
                                    <div class="card-content black-text">
                                        <h4>Agregar nuevo modulo</h4>
                                        <a href="/ClientBusiness/AddClientBusiness" class="btn-floating btn-large waves-effect waves-light red">
                                            <i class="material-icons">add</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>