@{
    var listLevels = ViewBag.ListLevels;
    var listProducts = ViewBag.ListProducts;
    var listProviders = ViewBag.ListProviders;

    int idOperative = Convert.ToInt32(Session["operative"]);
}

<div class="row">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Registrar Producto en Bodega</span>
                    <div class="row">
                        @using (Html.BeginForm("InsertCostBalance", "Cost", FormMethod.Post))
                        {
                            <div class="col s12">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <select name="selectLevel">
                                            <option value="" disabled selected>Escoger Nivel</option>
                                            @foreach (var item in listLevels)
                                            {
                                                <option value="@item.id_level">
                                                    Nivel @item.id_level - Estante @item.shelf.letter -
                                                    Pasillo @item.shelf.hall.id_hall -
                                                    Bodega @item.shelf.hall.warehouse.name
                                                </option>
                                            }
                                        </select>
                                    </div>

                                    <div class="input-field col s12">
                                        <select name="selectProd">
                                            <option value="" disabled selected>Escoger Producto</option>
                                            @foreach (var item in listProducts)
                                            {
                                                <option value="@item.id_product">@item.name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="input-field col s4">
                                        <input autofocus name="quantity" type="number" class="validate">
                                        <label for="first_name">Cantidad de Productos</label>
                                    </div>
                                    <div class="input-field col s4">
                                        <input name="costTotal" type="number" class="validate">
                                        <label for="last_name">Costo total de movimiento</label>
                                    </div>

                                    <div class="input-field col s4">
                                        <select name="selectProvider">
                                            <option value="" disabled selected>Escoger Proveedor</option>
                                            @foreach (var item in listProviders)
                                            {
                                                <option value="@item.id_provider">@item.name_provider</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button class="btn waves-effect waves-light" type="submit" name="action">
                                Registrar
                                <i class="material-icons right">send</i>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>
