@model List<Entity.Module_Entity>

<div class="row">
    <nav>
        <div class="nav-wrapper blue">
            <div class="col s12">
                &nbsp;&nbsp;
                <a href="#" class="breadcrumb">Home</a>
            </div>
        </div>
    </nav>

    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Modulos Disponibles</span>
                <div id="modules">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col s12">
                                <div class="card blue-grey darken-1">
                                    <div class="card-content white-text">
                                        <span class="card-title">Modulo de @item.name_module</span>
                                        <p>
                                            @item.desc_module
                                        </p>
                                    </div>
                                    <div class="card-action">
                                        <a href="/Inventory/Index">Ir a la aplicación</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-action">
                <a href="#">This is a link</a>
            </div>
        </div>
    </div>
</div>