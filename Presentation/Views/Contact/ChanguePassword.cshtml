@model Entity.Contact_Entity

@{
    ViewBag.Title = "ChanguePassword";
    Layout = "~/Views/Layouts/_LayoutContact.cshtml";
}

@using (Html.BeginForm("UpdatePassword", "Contact", FormMethod.Post))
{
    <div class="row container">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Modificar Contraseña</span><br />
                    <div class="row">
                        <div class="row">
                            <div class="input-field col s11">
                                <input id="input1" value="@Model.password" autofocus type="password" class="validate">
                                <label for="first_name">Contraseña Actual</label>
                            </div>
                            <div class="input-field col s1">
                                <a id="btn1" class="btn-floating waves-effect waves-light red"><i class="material-icons">remove_red_eye</i></a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s11">
                                <input id="input2" name="password" type="password" class="validate">
                                <label for="first_name">Contraseña Nueva</label>
                            </div>
                            <div class="input-field col s1">
                                <a id="btn2" class="btn-floating waves-effect waves-light red"><i class="material-icons">remove_red_eye</i></a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s11">
                                <input id="input3" name="password2" type="password" class="validate">
                                <label for="first_name">Repetir Contraseña</label>
                            </div>
                            <div class="input-field col s1">
                                <a id="btn3" class="btn-floating waves-effect waves-light red"><i class="material-icons">remove_red_eye</i></a>
                            </div>
                        </div>

                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Cambiar
                        <i class="material-icons right">send</i>
                    </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>

    let changuePasswordText = (element) => {
        if (element.type == 'password') {
            element.type = 'text';
        } else {
            element.type = 'password';
        }
    }

    btn1.addEventListener('click', () => {
        changuePasswordText(input1)
    })

    btn2.addEventListener('click', () => {
        changuePasswordText(input2)
    })

    btn3.addEventListener('click', () => {
        changuePasswordText(input3)
    })
</script>