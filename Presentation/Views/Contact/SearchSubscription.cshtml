@model List<Entity.Module_Subscription_Entity>

@{
    ViewBag.Title = "SearchSubscription";
    Layout = "~/Views/Layouts/_LayoutContact.cshtml";

    var typeSubs = "";
    foreach (var item in Model)
    {
        typeSubs = item.subscription.type_subscription;
        break;
    }
}


<div class="container">
    <nav>
        <div class="nav-wrapper blue">
            <div class="col s12">
                &nbsp;&nbsp;
                <a href="/Index/HomeContact" class="breadcrumb">Home</a>
                <a href="#" class="breadcrumb">Suscripción</a>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Suscripcion @typeSubs</span>
                    <table>
                        <thead>
                            <tr>
                                <th>Modulo</th>
                                <th>Precio en Quetzales</th>
                                <th>Precio en Dolares</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.module.name_module</td>
                                    <td>Q. @item.module.quetzals</td>
                                    <td>$. @item.module.dollars</td>
                                </tr>
                            }
                            <tr>
                                <td>Total</td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-action">
                    <a href="#">This is a link</a>
                </div>
            </div>
        </div>
    </div>
</div>

