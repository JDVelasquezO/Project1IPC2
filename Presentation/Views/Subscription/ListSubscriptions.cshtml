@model List<Entity.Subscription_Entity>

@{
    ViewBag.Title = "ListSubscriptions";
    Layout = "~/Views/Layouts/_LayoutAdminSystem.cshtml";
}

<nav>
    <div class="nav-wrapper blue">
        <div class="col s12">
            &nbsp;&nbsp;
            <a href="/Index/Home" class="breadcrumb">Home</a>
            <a href="" class="breadcrumb">Suscripciones</a>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Suscripciones Activas</span>
                <table>
                    <thead>
                        <tr>
                            <th>Identificador</th>
                            <th>Tipo de Modulo</th>
                            <th>Tipo de Suscripción</th>
                            <th>Fecha Inicial</th>
                            <th>Fecha Final</th>
                            <th>Cliente - Empresa</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.id_subscription</td>
                            <td>@item.typeModule.type_module</td>
                            <td>@item.typeSubscription.type_subscription</td>
                            <td>@item.typeSubscription.init_date</td>
                            <td>@item.typeSubscription.finish_date</td>
                            <td>@item.clientBusiness.name_client_business</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-action">
                <a href="#">This is a link</a>
                <a href="#">This is a link</a>
            </div>
        </div>
    </div>
</div>